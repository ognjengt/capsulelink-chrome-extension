{
  "manifest_version": 2,
  "name": "Capsulelink",
  "description": "Group, save and send links as one",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Capsulelink"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["background.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}